<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="ca.uqtr.g12.inf1034_h22_guichet_auto.LoginController"
            stylesheets="@styles.css" fx:id="fenetre">

    <left>
        <Rectangle width="300" height="500" fill="#656363"></Rectangle>
    </left>

    <center>
        <VBox alignment="CENTER" spacing="5.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <Text text="Guichet - Saisir PIN" styleClass="titre"/>
            <PasswordField fx:id="pin"></PasswordField>
            <Text fx:id="message"></Text>
            <Button fx:id="connexion" onMouseClicked="#onConnecter" text="Connecter!"/>
        </VBox>
    </center>

    <right>
        <Rectangle width="300" height="500" fill="#656363"></Rectangle>
    </right>
</BorderPane>