<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<HBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="ca.uqtr.g12.inf1034_h22_guichet_auto.ChoiceController"
      stylesheets="@styles.css" fx:id="fenetre" alignment="CENTER">

    <HBox alignment="CENTER">
        <GridPane hgap="80" vgap="20">

            <HBox GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" alignment="CENTER">
                <Text text="Faites votre choix" styleClass="titreChoix"/>
            </HBox>

            <Button onAction="#showScreen" fx:id="connexionDevise" userData="CHANGE_DEVISE"
                    GridPane.columnIndex="0" GridPane.rowIndex="1" minWidth="200">CHANGER DEVISE
            </Button>

            <Button onAction="#showScreen"  fx:id="connexionCheque"  userData="DEPOT_CHEQUE"
                    GridPane.columnIndex="1" GridPane.rowIndex="1" minWidth="200">DÉPÔT DE CHÈQUE
            </Button>

            <Button onAction="#showScreen"  fx:id="connexionNIP"  userData="CHANGE_NIP" minWidth="200"
                    GridPane.columnIndex="0" GridPane.rowIndex="2">CHANGER NIP
            </Button>

            <Button onAction="#showScreen"  fx:id="connexionRetrait"  userData="FAIRE_RETRAIT" minWidth="200"
                    GridPane.columnIndex="1" GridPane.rowIndex="2">FAIRE RETRAIT
            </Button>

            <Button onAction="#showScreen"  fx:id="connexionReleve"  userData="IMPRIMER_RELEVER" minWidth="200"
                    GridPane.columnIndex="0" GridPane.rowIndex="3">IMPRIMER RELEVÉS
            </Button>

            <Button onAction="#showScreen"  fx:id="connexionCompte"  userData="ETAT_COMPTE" minWidth="200"
                    GridPane.columnIndex="1" GridPane.rowIndex="3">ÉTAT DU COMPTE
            </Button>

            <Button onAction="#showScreen"  fx:id="connexionArgent"  userData="DEPOT_ARGENT" minWidth="200"
                     GridPane.columnIndex="0" GridPane.rowIndex="4">DÉPÔT D'ARGENT
            </Button>

            <Button onAction="#showScreen"  fx:id="connexionFacture" userData="PAYER_FACTURE" minWidth="200"
                     GridPane.columnIndex="1" GridPane.rowIndex="4">PAYER FACTURE
            </Button>

            <HBox GridPane.columnIndex="0" GridPane.rowIndex="6"
                  GridPane.columnSpan="2" alignment="CENTER">
                <VBox alignment="TOP_CENTER">
                    <Button fx:id="bouton_quitter"
                            onMouseClicked="#onQuitter"
                            userData="QUITTER" minWidth="200">
                        Quitter
                    </Button>
                </VBox>
            </HBox>
        </GridPane>
    </HBox>
</HBox>